<idea-plugin>
    <id>com.yot.wor</id>
    <name>World Of Refactoring</name>
    <vendor>yot</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.yot.wor.toolWindow.WorToolWindowFactory"
                    id="World Of Refactoring"
                    anchor="right"
                    icon="com.yot.wor.Icons.TOOL_WINDOW"/>
        <notificationGroup id="WoR Notifications"
                           displayType="BALLOON"
                           isLogByDefault="false"/>
    </extensions>

    <applicationServices>
        <service serviceImplementation="com.yot.wor.services.PlayerStateService"/>
        <service serviceImplementation="com.yot.wor.services.QuestService"/>
    </applicationServices>

    <projectServices>
        <service serviceImplementation="com.yot.wor.services.RefactoringDetectionService"/>
        <service serviceImplementation="com.yot.wor.settings.WoRSettings"/>
    </projectServices>

    <projectListeners>
        <listener class="com.yot.wor.listeners.RefactoringEventListenerImpl"
                  topic="com.intellij.refactoring.listeners.RefactoringEventListener"/>
    </projectListeners>
</idea-plugin>
